
@{
    ViewBag.Title = "Carrito";
}

<div class="row">

    <div class="col-md-12">

        <h1>Your Basket</h1>

    </div>

</div>

<!-- Basket -->

<div class="row">

    <div class="col-md-12">

        <table class="basket-table">
            <thead>
                <tr>
                    <th colspan="2">Item</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th colspan="2">Total</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="image"><a href=@Url.Action("Product","Home")><img src="~/assets/img/product-1.jpg" alt="Ibiza Lips" /></a></td>
                    <td class="title"><a href=@Url.Action("Product","Home")>Ibiza Lips</a></td>
                    <td class="qty"><input type="text" name="qty[]" value="1" /></td>
                    <td class="price">&pound;9.99</td>
                    <td class="total">&pound;9.99</td>
                    <td class="remove"><a href=""><span class="entypo trash"></span></a></td>
                </tr>
                <tr>
                    <td class="image"><a href=@Url.Action("Product","Home")><img src="~/assets/img/product-2.jpg" alt="Ibiza Banana" /></a></td>
                    <td class="title"><a href=@Url.Action("Product","Home")>Ibiza Banana</a></td>
                    <td class="qty"><input type="text" name="qty[]" value="1" /></td>
                    <td class="price">&pound;9.99</td>
                    <td class="total">&pound;9.99</td>
                    <td class="remove"><a href=""><span class="entypo trash"></span></a></td>
                </tr>
                <tr>
                    <td class="image"><a href=@Url.Action("Product","Home")><img src="~/assets/img/product-3.jpg" alt="I Was There" /></a></td>
                    <td class="title"><a href=@Url.Action("Product","Home")>I Was There</a></td>
                    <td class="qty"><input type="text" name="qty[]" value="1" /></td>
                    <td class="price">&pound;9.99</td>
                    <td class="total">&pound;9.99</td>
                    <td class="remove"><a href=""><span class="entypo trash"></span></a></td>
                </tr>
            </tbody>
        </table>

        <div class="clearfix">

            <p class="basket-total"><span>Total:</span> &pound;29.97</p>

        </div>

        <p class="actions">
            <a class="btn btn-blank" href=@Url.Action("Index","Home")>Continue Shopping</a>
            <a class="btn btn-blank" href="#">Empty Basket</a>
            <a class="btn btn-blank" href="#">Update Basket</a>
            <a class="btn btn-primary" href="@Url.Action("Index","Checkout")">Continue to Checkout</a>
        </p>

    </div>

</div>

<!-- Related Products -->

<div class="row">

    <div class="col-md-12">

        <h2>You May Also Like...</h2>

    </div>

</div>

<!-- Product Listing -->

